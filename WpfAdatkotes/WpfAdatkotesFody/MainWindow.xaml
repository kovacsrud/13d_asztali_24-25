<Window x:Class="WpfAdatkotesFody.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAdatkotesFody"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textboxAllapot" Text="{Binding Ertek,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Width="200" Height="30" FontSize="20" />
        <Slider x:Name="sliderAllapot" Minimum="0" Value="{Binding Ertek}" Maximum="100" VerticalAlignment="Center" Grid.Row="1" />
        <ProgressBar x:Name="progressbarAllapot" Value="{Binding Ertek}" Minimum="0" Maximum="100" Height="20" Grid.Row="2" />



    </Grid>
</Window>
