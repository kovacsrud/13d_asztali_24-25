<Window x:Class="WpfPelda.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPelda"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>

        </Grid.RowDefinitions>
        <TextBlock Text="Szám1" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Text="Szám2" Grid.Row="1" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Text="Szám3" Grid.Row="2" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Text="Eredmény" Grid.Row="3"  FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock x:Name="textBlockEredmeny" Text="" Grid.Row="3" Grid.Column="1" Width="300" MinWidth="300" MaxWidth="300"   FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox x:Name="textboxSzam1" Width="300" Height="40" FontSize="30" Grid.Column="1" />
        <TextBox x:Name="textboxSzam2" Width="300" Height="40" FontSize="30" Grid.Row="1" Grid.Column="1" />
        <TextBox x:Name="textboxSzam3" Width="300" Height="40" FontSize="30" Grid.Row="2" Grid.Column="1" />
        <Button x:Name="buttonSzamol" Content="Számolás" Width="200" Height="40" FontSize="26"  Grid.Row="4" Grid.ColumnSpan="2" Click="buttonSzamol_Click"/>

    </Grid>

</Window>
