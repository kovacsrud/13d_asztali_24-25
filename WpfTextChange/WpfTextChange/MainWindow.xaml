<Window x:Class="WpfTextChange.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTextChange"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textboxSzoveg" Width="400" Height="40" FontSize="28" TextChanged="textboxSzoveg_TextChanged"/>
        <TextBlock x:Name="textblockMasolat" Width="400" Height="40" FontSize="28"  Grid.Row="1"/>
        <TextBlock x:Name="textblockHossz" Width="400" Height="40" FontSize="28"  Grid.Row="2"/>
        <TextBox x:Name="textboxCsakOlvashato" Width="400" Height="40" IsReadOnly="True" FontSize="28" Grid.Row="3"/>
        <Button x:Name="buttonKapcsol" Content="Legyen írható!"  Width="300" Height="40" Grid.Row="4" Click="buttonKapcsol_Click"/>


    </Grid>
</Window>
