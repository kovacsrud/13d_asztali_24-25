<Window x:Class="WpfHomersekletKonvertalo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHomersekletKonvertalo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="textboxHomersekletErtek" Width="300" Height="40" FontSize="30" />
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <RadioButton x:Name="radioCelsiusKivalaszt" Content="Konvertálás Celsiusra" FontSize="20" VerticalContentAlignment="Center" IsChecked="True"/>
            <RadioButton x:Name="radioFahrenheitKivalaszt" Content="Konvertálás Fahrenheitre" FontSize="20" VerticalContentAlignment="Center" />
        </StackPanel>
        <TextBlock Grid.Row="2" x:Name="textblockEredmeny" FontSize="40" MinWidth="400" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" />
        <Button Grid.Row="3" x:Name="buttonKonvertalas" Content="Számolás" FontSize="16" Width="200" Height="40" Click="buttonKonvertalas_Click"/>



    </Grid>
</Window>
