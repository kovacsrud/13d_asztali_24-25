<Window x:Class="WpfCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCanvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas x:Name="vaszon" Background="AliceBlue">
        <Rectangle Width="200" Height="50" Fill="Brown" Canvas.Left="10" Canvas.Top="20" />
        <Ellipse Width="300" Height="150" Fill="Red" Canvas.Left="200" Canvas.Top="75"/>
        <Line X1="10" Y1="100" X2="200" Y2="400" Stroke="Black" StrokeThickness="2"/>
        <Polyline Points="10,150,50,180,90,160,140,190" Stroke="Green" StrokeThickness="2"/>
        <TextBlock Text="Canvas használata" FontSize="30" Foreground="BurlyWood" Canvas.Left="300" Canvas.Top="300"/>
        <Canvas Width="100" Height="100" Canvas.Left="600" Canvas.Top="300" Background="CornflowerBlue">
            <Ellipse Width="50" Height="50" Canvas.Left="5" Canvas.Top="5" Fill="Red"/>
        </Canvas>


    </Canvas>
</Window>
