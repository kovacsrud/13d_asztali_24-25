<Window x:Class="WpfSlideshow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSlideshow"
        mc:Ignorable="d"
        Title="SlideShow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="imageKep" Grid.ColumnSpan="2"/>
        <Button x:Name="buttonTolt" Content="Betöltés" Grid.Column="0" Grid.Row="1" Width="200" Height="40" FontSize="24" Click="buttonTolt_Click"/>
        <Button x:Name="buttonStartStop" Content="Start" Grid.Column="1" Grid.Row="1" Width="200" Height="40" FontSize="24" IsEnabled="False" Click="buttonStartStop_Click"/>

    </Grid>
</Window>
