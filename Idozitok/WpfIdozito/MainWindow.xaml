<Window x:Class="WpfIdozito.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfIdozito"
        mc:Ignorable="d"
        Title="WPF időzítő" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textblockA" Text="A" FontSize="200" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="1" x:Name="textblockB" Text="B" FontSize="200" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button x:Name="buttonKapcsol" Content="Start" Width="200" Height="40" FontSize="28" Grid.Row="1" Grid.ColumnSpan="2" Click="buttonKapcsol_Click"/>


    </Grid>
</Window>
