<Window x:Class="WpfKepMultiselect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfKepMultiselect"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Visible">
            <WrapPanel x:Name="wrapKepek" />
        </ScrollViewer>
        <WrapPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="buttonOpen" Content="Megnyitás" Width="200" Height="50" Grid.Row="1" Margin ="0,0,10,0" Click="buttonOpen_Click" />
            <Button x:Name="buttonClear" Content="Képek törlése" Width="200" Height="50" Click="buttonClear_Click"/>


        </WrapPanel>
        



    </Grid>
</Window>
