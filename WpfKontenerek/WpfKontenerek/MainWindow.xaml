<Window x:Class="WpfKontenerek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfKontenerek"
        mc:Ignorable="d"
        Title="WPF konténerek" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <WrapPanel VerticalAlignment="Center" >
            <Button Content="Gomb"  Width="200"/>
            <Button Content="Gomb" Width="200" />
            <Button Content="Gomb" Width="200" />
            <Button Content="Gomb" Width="200" />
            <Button Content="Gomb" Width="200" />
            <Button Content="Gomb" Width="200" />
        </WrapPanel>

        <ScrollViewer Grid.Row="1">
        <StackPanel >
            <Button Content="Gomb" />
            <Button Content="Gomb" />
            <Button Content="Gomb" />
            <Button Content="Gomb" />
            <Button Content="Gomb" />
            <Button Content="Gomb" />
            <Button Content="Gomb" />
            <Button Content="Gomb" />
            <Button Content="Gomb" />
            <Button Content="Gomb" />

        </StackPanel>
        </ScrollViewer>
        <DockPanel Grid.Row="2">
            <Button Content="Gomb" DockPanel.Dock="Top"/>
            <Button Content="Gomb" />
            <Button Content="Gomb" DockPanel.Dock="Bottom"/>
            <Button Content="Gomb" DockPanel.Dock="Right"/>

        </DockPanel>

    </Grid>
</Window>
